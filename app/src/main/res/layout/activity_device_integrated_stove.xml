<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/back" />/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="110dp"
                android:text="集成灶"
                android:textColor="@color/white"
                android:textSize="@dimen/low_carbon_title" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="集成灶开关 ："
            android:textSize="20sp"
            android:textColor="@color/colorSecondaryText"/>
        <Button
            android:id="@+id/integrated_stove_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryText"
            android:background="#62aef9"/>
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/integrated_stove_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryText"
            android:background="#62aef9"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="手动模式"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/main_activity_soybean_milk_machine"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:text="智能模式"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/main_activity_soybean_milk_machine"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前档位："
            android:textSize="20sp"
            android:textColor="@color/colorSecondaryText"/>
        <SeekBar
            android:id="@+id/window_seekbar"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:progressDrawable="@drawable/operate_window_seek_bar_layer_list"
            android:thumb="@drawable/window_thumb_selector"
            android:minHeight="10dp"
            android:maxHeight="10dp"
            android:progress="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已耗燃气："
            android:textSize="20sp"
            android:textColor="@color/colorSecondaryText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="0Nm³/h"
            android:textSize="20sp"
            android:textColor="@color/colorSecondaryText"/>
    </LinearLayout>
</LinearLayout>