    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--第一行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/integrated_stove"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="集"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_activity_integrated_stove"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="集成灶"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/cooker_hood"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="油"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_activity_cooker_hood"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="油烟机"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/rice_cooker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="饭"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_activity_rice_cooker"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="电饭煲"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/soybean_milk_machine"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="豆"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_activity_soybean_milk_machine"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="豆浆机"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

        </LinearLayout>

        <!--第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/window"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="窗"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_activity_window"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="窗户"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/light"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="灯"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_activity_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="节能灯"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/faucet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="水"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_activity_faucet"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="水龙头"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/main_activity_more">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/more_1"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="更多"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/operate_ui" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>